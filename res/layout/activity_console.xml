<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rmutsv.aquarium.ConsoleActivity" >

    <TextView
        android:id="@+id/textViewBid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="BID" />

    <TextView
        android:id="@+id/textViewTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Temp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Switch
                android:id="@+id/switchRelayHeater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ToggleButton
                android:id="@+id/toggleRelayHeater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textOff="ฮีตเตอร์"
                android:textOn="ฮีตเตอร์" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Switch
                android:id="@+id/switchRelayFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ToggleButton
                android:id="@+id/toggleRelayFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textOff="เครื่องกรอง"
                android:textOn="เครื่องกรอง" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buttonFeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ให้อาหาร" />

    <Button
        android:id="@+id/buttonRefresh"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ตรวจสอบสถานะ" />

    <Button
        android:id="@+id/buttonSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ตั้งค่าบอร์ด" />

</LinearLayout>
