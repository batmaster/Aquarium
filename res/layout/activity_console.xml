<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rmutsv.aquarium.ConsoleActivity" >

    <TextView
        android:id="@+id/textViewBid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="BID" />

    <Switch
        android:id="@+id/switchAuto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="โหมดอัตโนมัติ" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2" >

        <ToggleButton
            android:id="@+id/toggleRelayHeater"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:textOff="ฮีตเตอร์"
    		android:textOn="ฮีตเตอร์"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/toggleRelayFilter"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:textOff="เครื่องกรอง"
    		android:textOn="เครื่องกรอง"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonFeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />

    <Button
        android:id="@+id/buttonRefresh"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ตรวจสอบสถานะ" />

</LinearLayout>
